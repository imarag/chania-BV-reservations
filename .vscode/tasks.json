{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Run Backend",
      "type": "shell",
      "command": "source .venv/bin/activate && python main.py",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": false,
      "problemMatcher": []
    },
    {
      "label": "Start Full Stack",
      "dependsOn": ["Run Frontend", "Run Backend"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
